---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import Starfield from "~/components/starfield.astro";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div class="relative flex justify-center h-full place-items-center flex-col">
    <h2
      class="flex flex-col gap-2 sm:gap-4 sm:self-auto "
    >
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-8xl"
      >
        We build
        <br /> stellar
        <br /> websites
      </div>
    </h2>
    <p class="text-gray-50 max-w-xl text-center mt-4 text-md sm:text-lg mx-2">Web design subscriptions that fit any needs, with unlimited revisions and seamless integration with your team.</p>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @media (prefers-reduced-motion: reduce) {
    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
